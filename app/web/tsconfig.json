{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build/",
    "rootDir": "./",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "webpack.config.js"
  ]
}